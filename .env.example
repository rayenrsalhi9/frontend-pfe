# Environment Configuration for Espire Angular Application
# Copy this file to .env and fill in your actual values

# API Configuration
# Local development API URL
API_URL=http://127.0.0.1:8000/
# Production API URL (uncomment and update for production)
# API_URL=https://your-production-api.com/

# WebSocket Configuration
# Local development WebSocket host
WS_HOST=127.0.0.1
# Production WebSocket host (uncomment and update for production)
# WS_HOST=your-production-ws-host.com
WS_PORT=6002

# Authentication
# Token expiration time in minutes
TOKEN_EXPIRED_TIME_MIN=50

# Application Configuration
# Environment mode: development or production
NODE_ENV=development

# Angular Configuration
# Angular CLI analytics setting
NG_CLI_ANALYTICS=ci

# Build Configuration
# Add any build-specific environment variables here

# Third-party Services (Optional)
# Uncomment and configure if using Pusher or similar services
# PUSHER_APP_KEY=your-pusher-app-key
# PUSHER_CLUSTER=your-pusher-cluster

# File Upload Configuration
# Maximum file size in bytes (default: 10MB)
MAX_FILE_SIZE=10485760
# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=doc,docx,ppt,pptx,xls,xlsx,pdf,jpg,jpeg,png,gif,txt,csv,mp3,mp4,webm

# Development Server
# Port for the Angular development server
DEV_SERVER_PORT=4200
# Host for the Angular development server
DEV_SERVER_HOST=localhost
